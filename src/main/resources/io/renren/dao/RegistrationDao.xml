<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="io.renren.dao.RegistrationDao">
			
	<!--根据ID查询-->
	<select id="queryObject" resultType="io.renren.entity.RegistrationEntity">
		select * from registration where id = #{id}
	</select>
	
	<!--分页列表-->
	<select id="queryList" resultType="io.renren.entity.RegistrationEntity">
		select * from registration
		where dr = 0 
		<if test="teacherName != null and teacherName.trim() != ''">
			and `teacher_name` like concat('%',#{teacherName},'%')
		</if>
		<if test="course != null and course.trim() != ''">
			and `course` like concat('%',#{course},'%')
		</if>
		<if test="studentMobile != null and studentMobile.trim() != ''">
			and `student_mobile` like concat('%',#{studentMobile},'%')
		</if>
		<if test="className != null and className.trim() != ''">
			and `class_name` like concat('%',#{className},'%')
		</if>
			order by creation_time desc
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
		
	</select>
	<!--分页总数-->
 	<select id="queryTotal" resultType="int">
		select count(1) from registration
		where dr = 0 
		<if test="teacherName != null and teacherName.trim() != ''">
			and `teacher_name` like concat('%',#{teacherName},'%')
		</if>
		<if test="course != null and course.trim() != ''">
			and `course` like concat('%',#{course},'%')
		</if>
		<if test="studentMobile != null and studentMobile.trim() != ''">
			and `student_mobile` like concat('%',#{studentMobile},'%')
		</if>
		<if test="className != null and className.trim() != ''">
			and `class_name` like concat('%',#{className},'%')
		</if>
	</select>
	<!--新增-->
	<insert id="save" parameterType="io.renren.entity.RegistrationEntity" useGeneratedKeys="true" keyProperty="id">
		insert into registration
		(
				`student_name`, 				
				`student_mobile`, 				
				`class_name`, 				
				`teacher_name`, 				
				`course`, 				
				`examination_time`, 				
				`registration_time`, 				
				`apply_province`, 				
				`registration_province`, 				
				`remark`, 				
				`creator`, 				
				`creation_time`, 				
				`modifier`, 				
				`modified_time`, 				
				`dr`		
				)
		values
		(
				#{studentName}, 																			
				#{studentMobile}, 																			
				#{className}, 																			
				#{teacherName}, 																			
				#{course}, 																			
				#{examinationTime}, 																			
				#{registrationTime}, 																			
				#{applyProvince}, 																			
				#{registrationProvince}, 																			
				#{remark}, 																			
				#{creator}, 																			
				#{creationTime}, 																			
				#{modifier}, 																			
				#{modifiedTime}, 																			
				0									
				)
	</insert>
	<!-- 新增 -->
	<insert id="saveBatch" >
		insert into registration
		  (
			`student_name`, 				
			`student_mobile`, 				
			`class_name`, 				
			`teacher_name`, 				
			`course`, 				
			`examination_time`, 				
			`registration_time`, 				
			`apply_province`, 				
			`registration_province`, 				
			`remark`, 				
			`creator`, 				
			`creation_time`, 				
			`modifier`, 				
			`modified_time`, 				
			`dr`		
		  )
		values
		   <foreach collection="list" item="item" index="index" separator="," >
				(
				#{item.studentName}, 																			
				#{item.studentMobile}, 																			
				#{item.className}, 																			
				#{item.teacherName}, 																			
				#{item.course}, 																			
				#{item.examinationTime}, 																			
				#{item.registrationTime}, 																			
				#{item.applyProvince}, 																			
				#{item.registrationProvince}, 																			
				#{item.remark}, 																			
				#{item.creator}, 																			
				#{item.creationTime}, 																			
				#{item.modifier}, 																			
				#{item.modifiedTime}, 																			
				#{item.dr} 																																
				)
		  </foreach>
	</insert>
	
	<!--修改-->
	<update id="update" parameterType="io.renren.entity.RegistrationEntity">
		update registration 
		<set>
			<if test="studentName != null">`student_name` = #{studentName}, </if>
			<if test="studentMobile != null">`student_mobile` = #{studentMobile}, </if>
			<if test="className != null">`class_name` = #{className}, </if>
			<if test="teacherName != null">`teacher_name` = #{teacherName}, </if>
			<if test="course != null">`course` = #{course}, </if>
			<if test="examinationTime != null">`examination_time` = #{examinationTime}, </if>
			<if test="registrationTime != null">`registration_time` = #{registrationTime}, </if>
			<if test="applyProvince != null">`apply_province` = #{applyProvince}, </if>
			<if test="registrationProvince != null">`registration_province` = #{registrationProvince}, </if>
			<if test="remark != null">`remark` = #{remark}, </if>
			<if test="creator != null">`creator` = #{creator}, </if>
			<if test="creationTime != null">`creation_time` = #{creationTime}, </if>
			<if test="modifier != null">`modifier` = #{modifier}, </if>
			<if test="modifiedTime != null">`modified_time` = #{modifiedTime}, </if>
			<if test="dr != null">`dr` = #{dr}</if>
		</set>		
		where id = #{id}
	</update>
	
	<!--删除-->
	<!-- <update id="delete" parameterType="io.renren.entity.RegistrationEntity">
		UPDATE registration set dr = 1 where id = #{id}				
	</update> -->
	
	<!--删除-->
	<delete id="delete" parameterType="io.renren.entity.RegistrationEntity">
		delete from registration where id = #{id}				
	</delete>
	
	<!--批量删除-->
	<update id="deleteBatch" parameterType="io.renren.entity.RegistrationEntity">
		UPDATE registration set dr = 1 where id in 		 				
		<foreach item="id" collection="ids" open="(" separator="," close=")">
			#{id}
		</foreach>
	</update>
	
